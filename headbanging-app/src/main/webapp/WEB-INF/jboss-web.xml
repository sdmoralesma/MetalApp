<?xml version="1.0" encoding="UTF-8"?>
<jboss-web xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-web_5_1.xsd">

    <!-- let access the app at / and override default welcome-page -->
    <context-root>/</context-root>

    <security-domain>secureDomain</security-domain>
    <security-role>
        <principal-name>admin</principal-name>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <principal-name>jury</principal-name>
        <role-name>jury</role-name>
    </security-role>
    <security-role>
        <principal-name>participant</principal-name>
        <role-name>participant</role-name>
    </security-role>

</jboss-web>