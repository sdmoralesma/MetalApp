<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>MetalApp</display-name>
    <context-param>
        <description>State saving method: 'client' or 'server' (=default). See JSF Specification 2.5.2</description>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources.application</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>

    <!-- ############################################# -->
    <!-- # FACES CONFIG # -->
    <!-- ############################################# -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/error.xhtml</location>
    </error-page>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>securityRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>


    <!-- ############################################# -->
    <!-- # SECURITY CONSTRAINTS # -->
    <!-- ############################################# -->
    <security-constraint>
        <display-name>Admin Area</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Area</web-resource-name>
            <description></description>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description></description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Jury Area</display-name>
        <web-resource-collection>
            <web-resource-name>Jury Area</web-resource-name>
            <description></description>
            <url-pattern>/jury/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description></description>
            <role-name>jury</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Participant Area</display-name>
        <web-resource-collection>
            <web-resource-name>Participant Area</web-resource-name>
            <description></description>
            <url-pattern>/participant/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description></description>
            <role-name>participant</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- ############################################# -->
    <!-- # SECURITY ROLES # -->
    <!-- ############################################# -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>jury</role-name>
    </security-role>
    <security-role>
        <role-name>participant</role-name>
    </security-role>

    <!-- ############################################# -->
    <!-- # FILE UPLOAD # -->
    <!-- ############################################# -->
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
        <init-param>
            <param-name>thresholdSize</param-name>
            <param-value>51200</param-value>
        </init-param>
        <!-- Optional -->
        <!-- <init-param> -->
        <!-- <param-name>uploadDirectory</param-name> -->
        <!-- <param-value>/home/sergio/uploaded/images</param-value> -->
        <!-- </init-param> -->
    </filter>

    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>

    <!-- ############################################# -->
    <!-- # ImageServlet serving from absolute path # -->
    <!-- ############################################# -->
    <servlet>
        <servlet-name>imageServlet</servlet-name>
        <servlet-class>com.metal.util.ImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>imageServlet</servlet-name>
        <url-pattern>/image/*</url-pattern>
    </servlet-mapping>

</web-app>